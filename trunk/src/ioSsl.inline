#include <libdodo/directives.h>

#ifdef OPENSSL_EXT
#include <openssl/ssl.h>

namespace dodo
{
	namespace io
	{
		namespace ssl
		{
			/**
			 * @struct __sslConnection__
			 * @brief defines internal handlers for SSL
			 */
			struct __sslConnection__
			{
				/**
				 * constructor
				 */
				__sslConnection__() : handle(NULL)
				{
				}

				SSL *handle;     ///< SSL connection handle
			};

			/**
			 * @struct __sslContext__
			 * @brief defines internal context for SSL
			 */
			struct __sslContext__
			{
				/**
				 * constructor
				 */
				__sslContext__() : ctx(NULL)
				{
				}

				SSL_CTX *ctx;    ///< SSL context
			};

			/**
			 * @class __openssl___init__
			 * @brief initializes openssl evironment
			 */
			class __openssl___init__
			{
			  public:

				/**
				 * contructor
				 */
				__openssl___init__();

				/**
				 * destructor
				 */
				~__openssl___init__();

				/**
				 * add entropy for randomness
				 */
				void addEntropy();
			};

			extern __openssl___init__ __openssl___init_object__;
		};
	};
};
#endif

