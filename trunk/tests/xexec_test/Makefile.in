CXX:=@CXX@
CPPFLAGS:=-I../../include @CPPFLAGS@
LDFLAGS:=-L../.. @LDFLAGS@
CFLAGS:=@CFLAGS@ @DEFS@

all: test module

test: test.cc
	@$(CXX) $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -ldodo $^ -o $@ 

module: module.cc
	@$(CXX) $(CFLAGS) $(CPPFLAGS) $(LDFLAGS) -Wall -shared -ldodo -fPIC $^ -o $@ 
	
clean:
	@rm -rf test module

force: clean test module
