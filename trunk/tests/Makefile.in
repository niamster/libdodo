all:
	for i in ./*; do if [ -d $$i ]; then pushd $$i; make; if [[ $$? != 0 ]]; then exit $$?; fi; popd; fi; done;

test:
	for i in ./*; do if [ -d $$i ]; then pushd $$i; echo "execution of " `pwd`; ./test; popd; fi; done;
	
clean:
	for i in ./*; do if [ -d $$i ]; then pushd $$i; make clean; popd; fi; done;

force: 
	for i in ./*; do if [ -d $$i ]; then pushd $$i; make force; if [[ $$? != 0 ]]; then exit $$?; fi; popd; fi; done;
