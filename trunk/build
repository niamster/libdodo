
function build()
{
	exec 3>&1
	exec 1>/dev/null

	echo Building with $@ >&3 && \
	./configure $@ && \
	make clean && \
	make -s -C tests clean && \
	echo Building libdodo >&3 && \
	make && \
	echo Building tests >&3 && \
	make -s -C tests
}

build --enable-deque --enable-io-xexec --enable-graphics-xexec --enable-database-xexec --with-sqlite3 --with-postgresql --with-mysql --with-openssl --with-fast-cgi --with-pcre --enable-dl --with-libxml2 --with-bzip2 --with-zlib --with-iconv --with-imagemagick $@

build --enable-deque --enable-io-xexec --enable-graphics-xexec --enable-database-xexec --with-sqlite3 --with-postgresql --with-mysql --with-openssl --with-fast-cgi --with-pcre --enable-dl --with-libxml2 --with-bzip2 --with-zlib --with-iconv --with-imagemagick --with-ipc=XSI $@

build --enable-deque --enable-io-xexec --enable-graphics-xexec --enable-database-xexec --with-sqlite3 --with-postgresql --with-mysql --with-fast-cgi --with-pcre --enable-dl --with-libxml2 --with-bzip2 --with-zlib --with-iconv --with-imagemagick $@

build --enable-deque --enable-io-xexec --enable-graphics-xexec --enable-database-xexec --with-sqlite3 --with-postgresql --with-mysql --with-openssl --with-fast-cgi --with-pcre --enable-dl --with-bzip2 --with-zlib --with-iconv --with-imagemagick $@

build --enable-deque --enable-io-xexec --enable-graphics-xexec --enable-database-xexec --with-sqlite3 --with-postgresql --with-mysql --with-openssl --with-fast-cgi --with-pcre --with-libxml2 --with-bzip2 --with-zlib --with-iconv --with-imagemagick $@

build --disable-deque --enable-io-xexec --enable-graphics-xexec --enable-database-xexec --with-sqlite3 --with-postgresql --with-mysql --with-openssl --with-fast-cgi --with-pcre --enable-dl --with-libxml2 --with-bzip2 --with-zlib --with-iconv --with-imagemagick $@

build --enable-deque --disable-io-xexec --disable-graphics-xexec --disable-database-xexec --with-sqlite3 --with-postgresql --with-mysql --with-openssl --with-fast-cgi --with-pcre --enable-dl --with-libxml2 --with-bzip2 --with-zlib --with-iconv --with-imagemagick $@

build --enable-deque --enable-io-xexec --enable-graphics-xexec --enable-database-xexec $@
